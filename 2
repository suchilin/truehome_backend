from rest_framework import serializers
from .models import Land

def sm_validate(value):
    if value is not None:
        raise serializers.ValidationError('Los metros cuadrados son requeridos')
    return value

class LandSerializer(serializers.ModelSerializer):
    class Meta:
        model = Land
        fields = ['name', 'address']
        extra_kwargs = {
            'name': {
                'required': True,
                'max_length': 50,
                'error_messages': {
                    'blank': 'El nombre es requerido',
                    'max_length': 'El nombre debe ser hasta 50 caracteres'
                }
            },
            'address': {
                'required': True,
                'max_length':100,
                'error_messages': {
                    'blank': 'La direccion es requerida',
                    'max_legth' : 'La direccion debe ser hasta 100 caracteres'
                }
            }
            'address': {
                'validators':[]
            }
        }
